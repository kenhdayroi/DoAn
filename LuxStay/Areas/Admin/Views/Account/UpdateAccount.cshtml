@model LuxStay.Models.User
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Chỉnh Sửa Thông Tin Tài Khoản</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
</head>
<body>
    <h3 style="text-align: center;">Chỉnh Sửa Thông Tin Tài Khoản</h3>
    <section style="padding-top: 20px">
        <div class="container">
            <form action="/Admin/ManagerAccount/UpdateAccount" method="post">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="email" readonly value="@Model.email" />
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" name="phone" required value="@Model.phone" />
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" class="form-control" name="name" required value="@Model.name" />
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input type="text" class="form-control" name="address" required value="@Model.address" />
                        </div>
                    </div>
                    <div>
                        <div class="form-group">
                            <label>Role</label>
                            <input type="text" class="form-control" name="role" required value="@Model.role" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" required value="@Model.password" />
                        </div>
                    </div>
                </div>
                <div style="text-align: center;">
                    <input type="hidden" name="user_id" value="@Model.user_id" />
                    <button type="submit" class="btn btn-success" style="margin-top: 2px;">Cập Nhật </button>
                </div>
            </form>
        </div>
    </section>
</body>
</html>

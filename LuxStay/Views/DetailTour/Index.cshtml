@model LuxStay.Models.Tour

@{
    ViewBag.Title = "Chi tiết Tour - " + Model.tour_name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Chi tiết Tour - @Model.tour_name</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMzI4oVtqGJ9xk5OEC4fuA2c9z1RzD0QkK2n3m" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMzI4oVtqGJ9xk5OEC4fuA2c9z1RzD0QkK2n3m" crossorigin="anonymous">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <img src="@Url.Content($"~/images/Tour/{Model.image}")" alt="@Model.tour_name" class="img-fluid" style="width: 100%; height: auto;" />
            </div>
            <div class="col-md-4">
                <h3 class="mb-2">
                    <p class="mb-2">
                        <i class="fas fa-map-marker-alt" style="color: red;"></i>
                        @Model.tour_name
                    </p>
                </h3>
                <p><i class="fa fa-map-marker-alt"></i> <strong>Loại tour:</strong> @Model.tour_type</p>
                <p><i class="fa fa-dollar-sign"></i> <strong>Giá:</strong> @Model.price.ToString("C") VND </p>
                <p><i class="fa fa-map"></i> <strong>Địa chỉ:</strong> @Model.address</p>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-md-8">
                <h2>Mô tả:</h2>
                <p>@Model.detail_description</p>

                <div class="row">
                    <div class="col-md-6">
                        <div>
                            <div class="mb-2">
                                <i class="fa fa-bus"></i> <label> Xe đưa đón</label>
                            </div>
                            <div class="mb-2">
                                <i class="fa fa-coffee"></i> <label> Phục vụ ăn sáng</label>
                            </div>
                            <div class="mb-2">
                                <i class="fa fa-hotel"></i> <label> Phục vụ khách sạn</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <div class="mb-2">
                                <i class="fa fa-wifi"></i> <label> Wifi miễn phí</label>
                            </div>
                            <div class="mb-2">
                                <i class="fa fa-water"></i> <label> Đồ uống miễn phí</label>
                            </div>
                            <div class="mb-2">
                                <i class="fa fa-plane"></i> <label> Hỗ trợ đặt vé máy bay</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <h3>Đặt Tour</h3>
                <form asp-action="InsertBookingTour" method="post">
                    <input type="hidden" name="tour_id" value="@Model.tour_id" />
                    <div class="form-group">
                        <label for="people">Số Người:</label>
                        <input type="number" id="people" name="people" class="form-control" min="1" value="1" required />
                    </div>
                    <div class="form-group">
                        <label for="price">Đơn Giá:</label>
                        <input type="text" id="price" name="price" class="form-control" value="@Model.price" readonly />
                    </div>

                    <div class="form-group">
                        <label for="total_price">Tổng Giá:</label>
                        <input type="text" id="total_price" name="total_price" class="form-control" value="@Model.price" readonly />
                    </div>


                    @if (Context.Session.GetString("user") == null)
                    {
                        <a href="../Login" class="btn " style="background-color: #f65e38; color: white; margin-top: 15px;">Đăng nhập để đặt tour</a>
                    }
                    else
                    {
                        <input type="submit" class="btn " style="background-color: #f65e38; color: white; margin-top: 15px;" value="Đặt Phòng" />
                    }
                </form>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("people").addEventListener("input", function() {
            var people = document.getElementById("people").value;
            var price = document.getElementById("price").value;
            var totalPrice = people * price;
            document.getElementById("total_price").value = totalPrice;
        });
    </script>
</body>
</html>

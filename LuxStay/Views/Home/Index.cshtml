@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>LuxStay</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/paging.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMzI4oVtqGJ9xk5OEC4fuA2c9z1RzD0QkK2n3m" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMzI4oVtqGJ9xk5OEC4fuA2c9z1RzD0QkK2n3m" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>

    <section class="slide__carousel__wrapper">
        <div class="container">
            <div id="carouselId" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselId" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselId" data-slide-to="1"></li>
                    <li data-target="#carouselId" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img src="~/images/file.png" class="img-fluid" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/background_intro_1.png" class="img-fluid" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/background_intro_3.png" class="img-fluid" alt="Third slide">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselId" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselId" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <hr />
        </div>
    </section>

    <section class="greeting__wrap__section" style="padding-top: 5px;">
        <div class="container">
            <h4 class="greeting__wrapper">Chào mừng đến với LuxStay! @Context.Session.GetString("lastName")</h4>
            @if (Context.Session.GetString("user") == null)
            {
                    <p class="greeting__text__wrapper">
                    @Html.ActionLink("Đăng nhập", "Index", "Login", null, new { @class = "text-link" })
                        hoặc @Html.ActionLink("Đăng ký", "Index", "Register", null, new { @class = "text-link" }) để trải nghiệm!
                    </p>
            }
            else
            {
                    <p class="greeting__text__wrapper">Cùng trải nghiệm nhiều hơn nữa trên LuxStay</p>
            }
        </div>
    </section>

    <section>
        <div class="container service__homemie__wrap">
            <div class="row">
                @foreach (var place in Model.places)
                {
                        <div class="col-lg-3" style="padding-left: 11px; padding-right: 10px;">
                            <a href="@Url.Action("Index", "Place", new { place_id = place.place_id, total_home = place.total_home, place_name = place.place_name })"
                               style="text-decoration: none; color: black;">
                                <div class="card service__item shadow">
                                    <img style="height: 350px; border-radius: 3px;"
                                         class="card-img-top image__service img-fluid"
                                         src="~/images/@place.image" alt="Card image cap">
                                    <div class="address_title">
                                        <p>@place.place_name</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                }
            </div>
        </div>
    </section>

    <section class="place__travel__section" style="margin-top: 25px;">
        <div class="container">
            <h4 class="greeting__wrapper">Danh sách khách sạn</h4>
            <p>Cùng LuxStay bắt đầu chuyến hành trình chinh phục thế giới của bạn</p>
            <hr />
            <div class="row" style="margin-left: -0.05rem;">
                @foreach (var home in Model.homes)
                {
                        <a href="@Url.Action("Index", "Detail", new { home_id = home.home_id })" style="color: #555555;">
                            <div class="card" style="width: 17rem; border: none;">
                                <img style="width: 265px; height: 180px"
                                     src="~/images/product/@home.image_intro" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <p class="room">@home.home_type - @home.room_number phòng ngủ</p>
                                    <svg style="margin-top: -30px; margin-left: -20px; color: #F65E39;"
                                         xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-lightning-fill" viewBox="0 0 16 16">
                                        <path d="M5.52.359A.5.5 0 0 1 6 0h4a.5.5 0 0 1 .474.658L8.694 6H12.5a.5.5 0 0 1 .395.807l-7 9a.5.5 0 0 1-.873-.454L6.823 9.5H3.5a.5.5 0 0 1-.48-.641l2.5-8.5z" />
                                    </svg>
                                    <p style="margin-top: -38px;">*@home.home_name*</p>
                                @{
                                    int price = home.price;
                                    int million = price / 1000000;
                                    int hundred = price % 1000000 / 1000;

                                    if (million > 0)
                                    {
                                        if (hundred > 0)
                                        {
                                                            <p class="price_and_address">@million,@hundred,000đ/đêm - @home.place.place_name</p>
                                        }
                                        else
                                        {
                                                            <p class="price_and_address">@million,000,000đ/đêm - @home.place.place_name</p>
                                        }
                                    }
                                    else
                                    {
                                                    <p class="price_and_address">@hundred,000đ/đêm - @home.place.place_name</p>
                                    }
                                }
                                </div>
                            </div>
                        </a>
                }
            </div>
        </div>

        <!-- PAGGING -->
        <!-- PAGGING -->
        <nav aria-label="Page navigation example">
            @{
                int currentPage = ViewData["pageIndex"] != null ? (int)ViewData["pageIndex"] : 1;
                int totalPage = ViewData["totalPage"] != null ? (int)ViewData["totalPage"] : 1;
            }
            <ul class="pagination justify-content-center">
                @if (currentPage > 1)
                {
                    int previous = currentPage - 1;
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Home", new { pageIndex = previous })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= totalPage; i++)
                {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Home", new { pageIndex = i })">@i</a>
                    </li>
                }

                @if (currentPage < totalPage)
                {
                    int next = currentPage + 1;
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Home", new { pageIndex = next })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>

    </section>

    <section class="place__travel__section" style="margin-top: 25px;">
        <div class="container">
            <h4 class="greeting__wrapper">Danh sách tour</h4>
            <p>Cùng LuxStay bắt đầu chuyến hành trình chinh phục thế giới của bạn</p>
            <hr />
            <div class="tour-list row" style="margin-left: -0.05rem;">
                @foreach (var tour in Model.tours)
                {
                    <div class="tour-item card mb-5" style="width: 17rem; border: none;">
                        <img style="width: 265px; height: 180px" src="~/images/Tour/@tour.image" alt="@tour.tour_name" />
                        <p class="mt-1">
                            <i class="fas fa-map-marker-alt" style="color: red;"></i>
                            @tour.tour_name
                        </p>

                        <p class="font-weight-bold">Giá: @tour.price VND</p>
                        <a class="btn btn-warning" style="width: 150px;" href="@Url.Action("Index", "DetailTour", new { id = tour.tour_id })">Xem chi tiết</a>
                    </div>
                }
            </div>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jIz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-JZ9xT99oH0mbC8n7k10x+xbt0j5Y3aFfK0MXjvW6QG2I3k4T1uHtn/waeH8HRSu0" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-3gJIKg1wSHFSkVmIFaZg/QVSMdUHVp75/72vDgKfkj0oQ8Zq+hNUDNCUuxYB4iKT" crossorigin="anonymous"></script>
</body>

</html>
